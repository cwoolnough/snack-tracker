
<%= form_for @snack do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :calories %>
    <%= f.number_field :calories %>
    <%= f.label :deliciousness %>
    <%= f.select :deliciousness, (1..10) %>
    <%= f.collection_select :retailer_id, @retailers, :id, :name, prompt: "Select a Retailer" %>

    <%= f.submit "Snackify" %>
<% end %>

